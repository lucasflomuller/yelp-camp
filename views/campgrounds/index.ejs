<% include ../partials/header %>


<header class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>This is the campgrounds page</h1>
        <h4 class="lead">Campgrounds from all over the world</h4>
        <a class="btn btn-primary" href="/campgrounds/new">Add a new campground</a>
    </div>
</header>

<div class="container my-3">
    
    <h3>Our most popular campgrounds</h3>
    <div class="row">
        <div class="card-columns">
            <% campgrounds.forEach(function(campground){ %>
                <article class="card my-2 text-center">
                    <img src="<%= campground.image %>" alt="Campground image" class="card-img-top img-fluid">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <p class="lead text-left"><%= campground.description.substring(0,150) %>...</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <p><a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-primary">More Info</a></p>
                    </div>
                </article>
            <% }); %>
        </div>
    </div>
        
        
    </div>
    <% include ../partials/footer %>