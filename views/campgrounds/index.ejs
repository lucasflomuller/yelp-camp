<% include ../partials/header %>


<header class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>This is the campgrounds page</h1>
        <h4 class="lead">Campgrounds from all over the world</h4>
        <a class="btn btn-primary" href="/campgrounds/new">Add a new campground</a>
    </div>
</header>

<div class="container my-3">
    
    <h3>Our most popular campgrounds</h3>
    <div class="row">
        <div class="card-deck">
            <% var count = 0%>
            <% campgrounds.forEach(function(campground){ %>
                <% count += 1 %>
                <article class="card my-2">
                    <img src="<%= campground.image %>" alt="Campground image" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                    </div>
                    <div class="card-footer">
                        <p><a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-primary">More Info</a></p>
                    </div>
                </article>

                <% if(count % 2 == 0){ %>
                    <div class="w-100 d-none d-sm-block d-md-none"><!-- wrap every 2 on sm--></div>
                <% } %>
                <% if(count % 3 == 0){ %>
                    <div class="w-100 d-none d-md-block d-lg-none"><!-- wrap every 3 on md--></div>
                <% } %>
                <% if(count % 4 == 0){ %>
                    <div class="w-100 d-none d-lg-block d-xl-block"><!-- wrap every 4 on lg and xl--></div>
                <% } %>
                
            <% }); %>
        </div>
    </div>
        
        
    </div>
    <% include ../partials/footer %>